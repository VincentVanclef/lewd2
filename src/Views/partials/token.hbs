<div class="column">
    <h2 class="title">
        Generate access token
    </h2>
</div>

<div class="column">
    <form action="/user/token" method="POST">
        {{#if errors.token}}
            <div class="notification is-error">
                {{{ errors.token }}}
            </div>    
        {{/if}}
        <div class="field">
            <label class="label">Role</label>
            <div class="control">
                <div class="select">
                <select name="roleid">
                    {{#each roles}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
                </div>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <input type="submit" class="button is-link" value="Generate Token">
            </div>
        </div>
    </form>
</div>

<div class="column">
    {{#if token }}
        <h1 class="title">
            Generated token is: {{{ token }}}
        </h1>
    {{/if}}
</div>