<div class="columns">
    <div class="column is-offset-4 is-one-quarter">
        <form action="/register" method="POST">
            <div class="field">
                {{#if errors.token}}
                    <article class="message is-danger">
                        <div class="message-header">
                            <p>Token</p>
                        </div>
                        <div class="message-body">
                            {{{ errors.token }}}
                        </div>
                    </article>  
                {{/if}}
                <label for="token" class="label">Token provided by Katt</label>
                <div class="control">
                    <input type="text" class="input" name="token" disabled="disabled" value="{{{ token }}}">
                    <input type="hidden" class="input" name="token" readonly="readonly" value="{{{ token }}}">
                </div>
            </div>

            <div class="field">
                {{#if errors.username}}
                    <article class="message is-danger">
                        <div class="message-header">
                            <p>Username</p>
                        </div>
                        <div class="message-body">
                            {{{ errors.username }}}
                        </div>
                    </article>  
                {{/if}}
                <label for="username" class="label">Username</label>
                <div class="control">
                    <input type="text" class="input" id="username" name="username" minlength="3" maxlength="100" placeholder="Username">
                </div>
            </div>

            <div class="field">
                {{#if errors.password}}
                    <article class="message is-danger">
                        <div class="message-header">
                            <p>Password</p>
                        </div>
                        <div class="message-body">
                            {{{ errors.password }}}
                        </div>
                    </article>  
                {{/if}}
                <label for="password" class="label">Password</label>
                <div class="control">
                    <input type="password" id="password" class="input" name="password" maxlength="73" placeholder="password">
                </div>
            </div>
            
            <div class="field is-grouped is-grouped-right">
                <div class="control">
                    <input type="submit" class="button is-link" value="Register">
                </div>
            </div>
        </form>        
    </div>
</div>
